<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.page.main.MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.mufeng.libs.widget.bottomBarLayout.BottomBarLayout
        android:id="@+id/bbl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:smoothScroll="true">

        <com.mufeng.libs.widget.bottomBarLayout.BottomBarItem
            android:id="@+id/bblHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="24dp"
            app:iconNormal="@drawable/ic_tab_home_normal"
            app:iconSelected="@drawable/ic_tab_home_select"
            app:iconWidth="24dp"
            app:itemMarginTop="2dp"
            app:itemText="首页"
            app:itemTextSize="10sp"
            app:textColorNormal="@color/tab_normal_color"
            app:textColorSelected="@color/tab_selected_color" />

        <com.mufeng.libs.widget.bottomBarLayout.BottomBarItem
            android:id="@+id/bblExplore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="24dp"
            app:iconNormal="@drawable/ic_tab_explore_normal"
            app:iconSelected="@drawable/ic_tab_explore_select"
            app:iconWidth="24dp"
            app:itemMarginTop="2dp"
            app:itemText="探索"
            app:itemTextSize="10sp"
            app:textColorNormal="@color/tab_normal_color"
            app:textColorSelected="@color/tab_selected_color" />

        <com.mufeng.libs.widget.bottomBarLayout.BottomBarItem
            android:id="@+id/bblPublish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="28dp"
            app:iconNormal="@drawable/ic_tab_publish"
            app:iconSelected="@drawable/ic_tab_publish"
            app:iconWidth="28dp"
            app:itemMarginTop="2dp"
            app:itemText=""
            app:itemTextSize="0sp"
            app:textColorNormal="@color/tab_normal_color"
            app:textColorSelected="@color/tab_selected_color" />

        <com.mufeng.libs.widget.bottomBarLayout.BottomBarItem
            android:id="@+id/bblMessage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="24dp"
            app:iconNormal="@drawable/ic_tab_message_normal"
            app:iconSelected="@drawable/ic_tab_message_select"
            app:iconWidth="24dp"
            app:itemMarginTop="2dp"
            app:itemText="消息"
            app:itemTextSize="10sp"
            app:textColorNormal="@color/tab_normal_color"
            app:textColorSelected="@color/tab_selected_color" />

        <com.mufeng.libs.widget.bottomBarLayout.BottomBarItem
            android:id="@+id/bblMine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="24dp"
            app:iconNormal="@drawable/ic_tab_mine_normal"
            app:iconSelected="@drawable/ic_tab_mine_select"
            app:iconWidth="24dp"
            app:itemMarginTop="2dp"
            app:itemText="我的"
            app:itemTextSize="10sp"
            app:textColorNormal="@color/tab_normal_color"
            app:textColorSelected="@color/tab_selected_color" />

    </com.mufeng.libs.widget.bottomBarLayout.BottomBarLayout>

</LinearLayout>